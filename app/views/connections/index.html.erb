    <div class="row">
      <div class="col-md-9 col-sm-7">
        <h2>Connections</h2>
      </div>
      
      <div class="col-md-3 col-sm-5">
        
        <form method="get" role="form" class="search-form-full">
        
          <div class="form-group">
            <input type="text" class="form-control" name="s" id="search-input" placeholder="Search..." />
            <i class="entypo-search"></i>
          </div>
          
        </form>
        
      </div>
    </div>
    
    
    <!-- Following -->
    
    <!-- Single Member -->
    <h3>People you follow</h3>
    <% @targets.each do |target| %>
      <div class="member-entry">

          <% if target.image %>
        <a href="extra-timeline.html" class="member-img">
          <%= image_tag(target.image, :class => 'img-rounded') %>
          <% end %>
          <i class="entypo-forward"></i>
        </a>
        
        <div class="member-details">
          <h4>
            <%= link_to target.name, user_path(target) %>
          </h4>
          
          <!-- Details with Icons -->
          <div class="row info-list">
            
            <div class="col-sm-4">
              <i class="entypo-briefcase"></i>
              Job Title at <a href="#">Workplace</a>
            </div>
            
            <div class="clear"></div>
            
            <div class="col-sm-4">
              <i class="entypo-location"></i>
              <a href="#">Somewhere, USA</a>
            </div>          
          </div>
        </div>   
      </div>
    <% end %>
    <!-- Followers -->
    
    <!-- Single Member -->
    <h3>Your Followers</h3>
    <% @followers.each do |follower| %>
