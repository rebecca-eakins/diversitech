<body class="page-body login-page login-form-fall loaded login-form-fall-init">

<!-- This is needed when you send requests via Ajax -->

<div class="login-container">
  <div class="login-header login-caret" id="slim">
    <div class="login-content">
      <h1 class="logo">ctrl-F</h1>
      <h2>Forgot your password?</h2>
      <p class="description">Enter your email, and we will send the reset link.</p>
    </div>
    
  </div>
  
  <div class="login-form">
    <div class="login-content">
      
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, id: "form_login"}) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="entypo-mail"></i>
            </div>
            <%= f.email_field :email, autofocus: true, :class => "form-control", :id => "email", placeholder: "Email" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.submit "Send me reset password instructions", :class => 'btn btn-primary btn-block', id: 'loggins' %>
          <% end %>
        </div>
      
      <div class="login-bottom-links">

        <%= render "devise/shared/links" %>
        
        <br />
                
      </div>
    </div>
  </div>
</div>  
</body>