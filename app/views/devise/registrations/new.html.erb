<body class="page-body login-page login-form-fall loaded login-form-fall-init" data-url="http://neon.dev">

<!-- This is needed when you send requests via Ajax -->

<div class="login-container">
  <div class="login-header login-caret" id="slim">
    <div class="login-content">
      <h1 class="logo">ctrl-F</h1>
      <h2>Join the community.</h2>
      <p class="description">To help diversify tech in your area, up below.</p>
    </div>
    
  </div>
  
  <div class="login-form">
    <div class="login-content">
      
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: "form_login"}) do |f| %>
        <%= devise_error_messages! %>
        
        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="entypo-user"></i>
            </div>
            <%= f.text_field :name, autofocus: true, :class => "form-control", :id => "name", placeholder: "Your Name" %>
          </div>
        </div>


        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="entypo-mail"></i>
            </div>
            <%= f.email_field :email, autofocus: true, :class => "form-control", :id => "email", placeholder: "Email" %>
          </div>
        </div>

        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="entypo-key"></i>
            </div>
              <%= f.password_field :password, autocomplete: "off",:class => "form-control", :id => "password", placeholder: "Password" %>
          </div>
          <p>
            <% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          </p>
        </div>

        <div class="form-group">
          <div class="input-group">
            <div class="input-group-addon">
              <i class="entypo-key"></i>
            </div>
              <%= f.password_field :password_confirmation, autocomplete: "off",:class => "form-control", :id => "password_confirmation", placeholder: "Confirm your password" %>
          </div>
        </div>


        <div class="form-group">
          <%= f.submit 'Sign up', :class => 'btn btn-primary btn-block', id: 'loggins' %>
          <% end %>
        </div>


        <div class="login form-group">
          <em>- or -</em>
        </div>
        
        <div class="form-group">
          
        <%= link_to "Join with Github <i class='entypo-github'></i>".html_safe, '/users/auth/github', :class => "btn btn-default btn-lg btn-block btn-icon icon-left github-button", :method => :get %>
          
        </div>

      
      <div class="login-bottom-links">

        <%= render "devise/shared/links" %>
        
        <br />
                
      </div>
    </div>
  </div>
</div>  
</body>