<h3>Forum</h3><br>
<div class="row">
	<div class="col-sm-12">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<!-- <div class="panel-title"></div> -->
					<%= render 'layouts/search' %>
				<div class="panel-options">
					<ul class="nav nav-tabs">
						<% Goal.all.each do |goal| %>
							<li class="<%= "active" if goal.id == 1 %>"><%= link_to goal.name.capitalize, "##{goal.name}-forum", :"data-toggle" => "tab" %></li>
						<% end %>
					</ul>
				</div>
			</div>
			<div class="panel-body">
				<div class="tab-content">
					<% Goal.all.each do |goal| %>
						<div class="tab-pane<%= " active" if goal.id == 1 %>" id="<%= goal.name %>-forum">
							<div id="relevant-posts">
								<ul>
									<% goal.posts.each do |post| %>
										<%= render 'post', post: post %>
									<% end %>
								</ul>
							</div>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>