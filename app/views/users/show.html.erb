<h1><%= @user.name %>'s Profile</h1>
<% if current_user == @user %>
  <%= link_to "Edit Profile", edit_user_path(current_user) %>
<% end %>

<%= render 'connections/follow_form' %>

<h4>Education</h4>
<ul>
  <% current_user.institutions.where('institution_type = "school"').each do |institution| %>
    <li><%= institution.name %></li>
  <% end %>
</ul>

<h4>Work History</h4>
<ul>
  <% current_user.institutions.where('institution_type = "work"').each do |institution| %>
    <li><%= institution.name %></li>
  <% end %>
</ul>